<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

         <LinearLayout
             android:orientation="vertical"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:layout_margin="10dp"
             android:scrollbars="vertical">

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:text="@string/info_xiangyongriqi" />


             <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                 android:weightSum="1">

                 <EditText
                     android:id="@+id/create_time"
                     android:layout_width="180dp"
                     android:layout_height="wrap_content"
                     android:maxLength="30"
                     android:ems="10" />

                 <Button
                     android:layout_width="80dp"
                     android:layout_height="40dp"
                     android:onClick="getDate"
                     android:text="@string/info_shezhishijian"
                     android:background="@drawable/btn_nor_down_grey" />

             </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:maxLength="30"
                         android:text="@string/info_fandianer" />

                     <Spinner
                         android:layout_width="180dp"
                         android:layout_height="wrap_content"
                         android:id="@+id/eat_time"
                         android:entries="@array/eat_time" />
                </LinearLayout>

            </LinearLayout>
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textSize="12sp"
                 android:text="@string/info_chidesha" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">
                 <EditText
                     android:id="@+id/food_name"
                     android:layout_width="260dp"
                     android:layout_height="wrap_content"
                     android:maxLength="100"
                     android:inputType="textMultiLine"
                     android:ems="10" />

                <Button
                    android:id="@+id/food_name_frequent"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_nor_down_grey"
                    android:text="吃过.." />
            </LinearLayout>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="5dp"
                 android:textSize="12sp"
                 android:text="@string/info_nachide" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:weightSum="1">
                 <EditText
                     android:id="@+id/eat_where"
                     android:layout_width="260dp"
                     android:layout_height="wrap_content"
                     android:maxLength="100"
                     android:ems="10" />
                <Button
                    android:id="@+id/eat_where_frequent"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_nor_down_grey"
                    android:text="去过.." />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:text="@string/info_beizhu" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">
                <EditText
                    android:id="@+id/remark"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:maxLength="500"
                    android:ems="10" />

                <Button
                    android:id="@+id/add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:text="保存"
                    android:background="@drawable/btn_nor_down_green"
                    android:textSize="22sp" />
            </LinearLayout>


             <!--纯占位，没招了，要不按钮下边儿看不见了！-->
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="10dp"
                 android:textSize="12sp"
                 android:text="" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
  
